<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.3"
        android:id="@+id/vpImgBanner"
        android:scaleType="fitXY"
        android:src="@drawable/background_login" />

    <ImageView
        android:id="@+id/vpImgPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_1"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vpTxtMovieName"
        android:text="Titanik"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/vpImgPhoto"
        app:layout_constraintStart_toStartOf="@+id/vpImgPhoto"
        app:layout_constraintTop_toBottomOf="@+id/vpImgPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Titanik"
        android:id="@+id/vpTxtMovieDetail"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/vpImgPhoto"
        app:layout_constraintStart_toStartOf="@+id/vpImgPhoto"
        app:layout_constraintTop_toBottomOf="@+id/vpTxtMovieName" />




</androidx.constraintlayout.widget.ConstraintLayout>